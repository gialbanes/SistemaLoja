<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Editar cliente</h1>
            <hr>
        </div>
        <div class="card-body">
            <form action="/clientes/update" method="post">
                <label>Nome do cliente:</label>
                <input type="text" name="nome" id="nome" class="form-control" value="<%= cliente.nome >" required>

                <label>CPF do cliente:</label>
                <input type="text" name="cpf" id="cpf" class="form-control" value="<%= cliente.cpf >" required>
                
                <label>Endere√ßo do cliente:</label>
                <input type="text" name="endereco" id="endereco" class="form-control" value="<%= cliente.endereco >" required>

                <input type="hidden" value="<%= cliente.id %>">
                <br>
                <input type="submit" class="btn btn-warning" value="Alterar">
            </form>
            <hr>
        </div>
    </div>
</div>




