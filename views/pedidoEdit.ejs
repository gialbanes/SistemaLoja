<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Editar pedido</h1>
            <hr>
        </div>
        <div class="card-body">
            <form action="/pedidos/update" method="post">
                <label>Número do pedido:</label>
                <input type="text" name="numero" id="numero" class="form-control" value="<%= pedido.numero %>" required>
                <label>Valor do pedido:</label>
                <input type="text" name="valor" id="valor" class="form-control" value="<%= pedido.valor %>" required>
                <input type="hidden" name="id" value="<%= pedido.id %>">
                <br>
                <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações para o cliente <%= pedido.numero %>')">
            </form>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs') %>